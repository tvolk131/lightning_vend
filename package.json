{
  "name": "lightning-vend-client",
  "scripts": {
    "test": "jest",
    "check-typescript-types": "tsc --noEmit --skipLibCheck",
    "build-prod": "webpack --mode production",
    "build-dev": "webpack --watch --mode development",
    "build-dev-no-watch": "webpack --mode development",
    "lint": "eslint './**/*.ts' './**/*.tsx'",
    "start-prod": "ts-node ./server/index.ts",
    "start-dev": "nodemon ./server/index.ts --watch server --watch client/out/bundle.js",
    "build-proto": "sh proto/build.sh && npm run build-grpc-web-proto",
    "build-grpc-web-proto": "sudo apt-get update && sudo apt-get install -y protobuf-compiler && npm install -g protoc-gen-grpc-web && cd proto && mkdir -p ../proto_ts_gen && protoc -I=. ./lightning_vend/service.proto ./lightning_vend/model.proto ./lnd/lnrpc/lightning.proto --js_out=import_style=commonjs,binary:../proto_ts_gen --grpc-web_out=import_style=typescript,mode=grpcwebtext:../proto_ts_gen"
  },
  "author": "Tommy Volk",
  "dependencies": {
    "@emotion/styled": "^11.10.5",
    "@grpc/proto-loader": "^0.7.4",
    "@mui/icons-material": "^5.10.16",
    "@mui/lab": "^5.0.0-alpha.111",
    "@mui/material": "^5.10.17",
    "@mui/styles": "^5.10.16",
    "@node-lightning/invoice": "^0.28.0",
    "axios": "^1.2.1",
    "compression": "^1.7.4",
    "cookie": "^0.5.0",
    "express": "^4.18.2",
    "google-protobuf": "^3.21.2",
    "grpc": "^1.24.11",
    "grpc-web": "^1.4.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-helmet": "^6.1.0",
    "react-qr-code": "^2.0.8",
    "react-router-dom": "^6.6.1",
    "rxjs": "^7.8.0",
    "socket.io": "^4.5.4",
    "socket.io-client": "^4.5.4",
    "ts-node": "^10.9.1",
    "ts-proto": "^1.138.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.15",
    "@types/google-protobuf": "^3.15.6",
    "@types/jest": "^29.2.5",
    "@types/react-dom": "^18.0.9",
    "@types/react-helmet": "^6.1.6",
    "@types/react-test-renderer": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "eslint": "^8.29.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fork-ts-checker-webpack-plugin": "^6.4.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "browser": true,
      "node": true
    },
    "globals": {
      "NodeJS": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
      "comma-dangle": "error",
      "complexity": [
        "error",
        13
      ],
      "max-len": ["error", 100],
      "new-parens": "error",
      "no-console": "error",
      "no-multiple-empty-lines": "error",
      "no-tabs": "error",
      "no-trailing-spaces": "error",
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_",
          "args": "none"
        }
      ],
      "no-whitespace-before-property": "error",
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "semi-style": "error",
      "sort-imports": "error",
      "strict": "error"
    }
  }
}
