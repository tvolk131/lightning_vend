{
  "name": "lightning-vend-client",
  "scripts": {
    "test": "npm run test-client && npm run test-server",
    "test-client": "jest --config jest.config.jsdom.js",
    "test-server": "jest --config jest.config.node.js",
    "update-test-snapshots": "npm run test-client -- -u",
    "check-typescript-types": "tsc --noEmit --skipLibCheck",
    "build-prod": "webpack --mode production",
    "build-dev": "webpack --watch --mode development",
    "build-dev-no-watch": "webpack --mode development",
    "lint": "eslint './**/*.ts' './**/*.tsx'",
    "start-prod": "ts-node ./server/index.ts",
    "start-dev": "nodemon ./server/index.ts --watch server --watch client/out/**",
    "build-proto": "sh ./build_ts_proto.sh",
    "esbuild": "esbuild ./client/src/index.tsx --bundle --minify --sourcemap --metafile=meta.json --platform=browser --target=chrome80 --analyze --outfile=bundle.js",
    "esbuild-basic": "esbuild"
  },
  "author": "Tommy Volk",
  "dependencies": {
    "@emotion/styled": "^11.11.0",
    "@grpc/proto-loader": "^0.7.9",
    "@mui/icons-material": "^5.14.8",
    "@mui/lab": "^5.0.0-alpha.143",
    "@mui/material": "^5.14.8",
    "@node-lightning/invoice": "^0.28.0",
    "@react-spring/web": "^9.7.3",
    "axios": "^1.5.0",
    "bson": "^5.4.0",
    "clean-webpack-plugin": "^4.0.0",
    "compression": "^1.7.4",
    "cookie": "^0.5.0",
    "dotenv": "^16.3.1",
    "eslint-plugin-neverthrow": "^1.1.4",
    "express": "^4.18.2",
    "file-loader": "^6.2.0",
    "grpc": "^1.24.11",
    "html-webpack-plugin": "^5.5.3",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^3.1.2",
    "mongodb": "^5.8.1",
    "mongodb-memory-server": "^8.15.1",
    "neverthrow": "^6.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intersection-observer-hook": "^2.1.1",
    "react-qr-code": "^2.0.12",
    "react-router-dom": "^6.15.0",
    "react-twitter-widgets": "^1.11.0",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "ts-node": "^10.9.1",
    "ts-proto": "^1.157.0",
    "uuid": "^9.0.0",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/react-dom": "^18.2.7",
    "@types/react-test-renderer": "^18.0.1",
    "@types/uuid": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "eslint": "^8.48.0",
    "esbuild-loader": "^4.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "nodemon": "^2.0.22",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "browser": true,
      "node": true
    },
    "globals": {
      "NodeJS": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier",
      "neverthrow"
    ],
    "parserOptions": {
      "sourceType": "module",
      "project": ["./tsconfig.json"]
    },
    "extends": "eslint:recommended",
    "rules": {
      "comma-dangle": "error",
      "complexity": [
        "error",
        22
      ],
      "max-len": [
        "error",
        80
      ],
      "new-parens": "error",
      "no-multiple-empty-lines": "error",
      "no-tabs": "error",
      "no-trailing-spaces": "error",
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_",
          "args": "none"
        }
      ],
      "no-whitespace-before-property": "error",
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "semi-style": "error",
      "sort-imports": "error",
      "strict": "error",
      "@typescript-eslint/explicit-member-accessibility": "error",
      "neverthrow/must-use-result": "error"
    }
  }
}
